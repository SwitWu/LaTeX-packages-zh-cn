%    后的第一页布局(first-page layout)。
%    \begin{macrocode}
\newcommand{\restoregeometry}{%
  \clearpage
  \Gm@restore@pkg
  \Gm@changelayout}%
%    \end{macrocode}
%    \end{macro}
